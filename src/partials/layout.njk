<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <meta name="description" content={{ description }}>
  </head>
 <body>
  {% block header %}
    <header>
      <p>This is the header.</p>
    </header>
  {% endblock %}
  <main>
    {% block content %}
      {{ content | safe }}
    {% endblock %}
  </main>
  {% block footer %}
    <footer>
      <p>This is the footer.</p>
    </footer>
  {% endblock %}
</body>
</html>
